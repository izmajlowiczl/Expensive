<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/vTagsSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vTagsBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="@dimen/spacer"
                app:srcCompat="@drawable/ic_arrow_back"/>

            <ImageView
                android:id="@+id/vTagsCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="@dimen/spacer"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_add"/>

            <EditText
                android:id="@+id/vTagsFilterInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@id/vTagsCreate"
                android:layout_toRightOf="@id/vTagsBack"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/tag_filter_hint"
                android:imeOptions="actionDone|actionGo"
                android:inputType="text|textCapSentences"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="@dimen/spacer"
                android:paddingLeft="@dimen/small_spacer"
                android:paddingTop="@dimen/spacer"
                android:textSize="@dimen/listItemText"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/vTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
