<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vNewTransactionTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vNewTransactionPlaceholderImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/spacer"
            android:layout_marginLeft="@dimen/content_padding_left"
            android:layout_marginTop="@dimen/spacer"
            android:src="@drawable/ic_add_white_24dp"
            android:tint="@color/colorTextLight" />

        <ImageView
            android:id="@+id/vNewTransactionPlaceholderSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center_vertical"
            android:padding="@dimen/spacer"
            android:src="@drawable/ic_done_white_24dp"
            android:tint="@color/colorTextLight"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/vNewTransactionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/vNewTransactionPlaceholderSave"
            android:layout_toRightOf="@id/vNewTransactionPlaceholderImg"
            android:paddingLeft="@dimen/medium_spacer"
            android:paddingRight="@dimen/small_spacer"
            android:text="@string/add_new_spending"
            android:textColor="@color/colorTextLight" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vNewTransactionParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vNewTransactionTitleHeader"
        android:background="@color/toolbar_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/small_spacer"
        android:paddingLeft="48dp"
        android:paddingRight="@dimen/small_spacer"
        android:paddingTop="@dimen/small_spacer"
        android:visibility="gone"
        tools:visibility="visible">

        <EditText
            android:id="@+id/vNewTransactionAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="$$$"
            android:inputType="numberDecimal"
            android:maxLines="1" />

        <EditText
            android:id="@+id/vNewTransactionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:maxLines="2" />
    </LinearLayout>

</RelativeLayout>
