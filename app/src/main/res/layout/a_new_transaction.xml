<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vNewTransactionTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vNewTransactionClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center_vertical"
            android:padding="@dimen/spacer"
            android:src="@drawable/ic_add_white_24dp"
            android:tint="@color/icons"
            android:visibility="invisible"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/vNewTransactionSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center_vertical"
            android:padding="@dimen/spacer"
            android:src="@drawable/ic_done_white_24dp"
            android:tint="@color/icons"
            android:visibility="invisible"
            tools:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/vNewTransactionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_spacer"
        android:layout_marginTop="@dimen/medium_spacer"
        android:paddingLeft="66dp"
        android:paddingRight="@dimen/small_spacer"
        android:text="@string/add_new_spending"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorText" />

    <LinearLayout
        android:id="@+id/vNewTransactionParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/small_spacer"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/small_spacer"
            android:paddingTop="@dimen/small_spacer">

            <ImageView
                android:id="@+id/vNewTransactionAmountImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/spacer"
                android:layout_marginLeft="@dimen/content_padding_left"
                android:src="@drawable/ic_attach_money_white_24dp"
                android:tint="@color/icons" />

            <EditText
                android:id="@+id/vNewTransactionAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/vNewTransactionAmountImg"
                android:background="@color/transparent"
                android:hint="@string/enter_amount"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingBottom="@dimen/small_spacer"
                android:paddingLeft="@dimen/medium_spacer"
                android:paddingRight="@dimen/small_spacer"
                android:paddingTop="@dimen/small_spacer"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/listItemText" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/small_spacer">

            <ImageView
                android:id="@+id/vNewTransactionDescriptionImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/spacer"
                android:layout_marginLeft="@dimen/content_padding_left"
                android:paddingTop="@dimen/small_spacer"
                android:src="@drawable/ic_subject_white_24dp"
                android:tint="@color/icons" />

            <EditText
                android:id="@+id/vNewTransactionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/vNewTransactionDescriptionImg"
                android:background="@color/transparent"
                android:hint="@string/description"
                android:paddingBottom="@dimen/small_spacer"
                android:paddingLeft="@dimen/medium_spacer"
                android:paddingRight="@dimen/small_spacer"
                android:paddingTop="@dimen/small_spacer"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/listItemText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vNewTransactionRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:paddingTop="@dimen/small_spacer">

            <ImageView
                android:id="@+id/vNewTransactionRepeatImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/spacer"
                android:layout_marginLeft="@dimen/content_padding_left"
                android:paddingTop="@dimen/small_spacer"
                android:src="@drawable/ic_update_white_24dp"
                android:tint="@color/icons" />

            <TextView
                android:id="@+id/vNewTransactionRepeatTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/vNewTransactionRepeatImg"
                android:background="@color/transparent"
                android:paddingBottom="@dimen/small_spacer"
                android:paddingLeft="@dimen/medium_spacer"
                android:paddingRight="@dimen/small_spacer"
                android:paddingTop="@dimen/small_spacer"
                android:text="@string/repeat_no_repeat"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/listItemText" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
