<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <!-- 88dp bottom padding consists of FAB sized + its margins top and bottom-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/vTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/window_bg"
        android:clipToPadding="false"
        android:paddingBottom="88dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/vTransactionsEmptyMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/spacer"
        android:text="@string/empty_transactions_msg"
        android:visibility="gone"/>
</FrameLayout>
